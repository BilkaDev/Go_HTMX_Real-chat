package components

templ Conversation(avatar string, fullName string) {
	<div class="flex gap-2 items-center hover:bg-sky-500 rounded p-2 py-1 cursor-pointer">
		<div class="avatar online">
			<div class="w-12 rounded-full">
				<img src={ avatar } alt="user avatar"/>
			</div>
		</div>
		<div class="flex flex-col flex-1">
			<p class="font-bold text-gray-200">{ fullName }</p>
		</div>
	</div>
	<div class="divider px-3 my-0 py-0 h-1"></div>
}
